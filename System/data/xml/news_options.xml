<?xml version="1.0" encoding="iso-8859-1"?>
<cp type="component" version="2.3.0">
	<name>News Article Settings</name>
	<author>Marcel Domke</author>
	<creationDate>Mai 2005</creationDate>
	<copyright>(C) 2005 Cyber-Portal.NET</copyright>
	<authorEmail>info@cyber-portal.net</authorEmail>
	<authorUrl>www.cyber-portal.net</authorUrl>
	<version>0.1.0a</version>
	<description>This shows a single news Article page</description>
	<params>

		<param name="show_title" type="radio" default="1" label="Title" description="Show/Hide the title">
			<option value="0">verbergen</option>
			<option value="1">anzeigen</option>
		</param>

		<param name="link_titles" type="radio" default="" label="Linked Titles" description="Make your Item titles linkable">
			<option value="">Katgorie Einstellung</option>
			<option value="0">nein</option>
			<option value="1">ja</option>
		</param>

		<param name="introtext" type="radio" default="1" label="Intro Text" description="Show/Hide the intro text">
			<option value="0">verbergen</option>
			<option value="1">anzeigen</option>
		</param>

		<param name="category" type="radio" default="1" label="Category Name" description="Show/Hide the Category the item belongs to">
			<option value="0">verbergen</option>
			<option value="1">anzeigen</option>
		</param>

		<param name="category_link" type="radio" default="1" label="Category Name Linkable" description="Make the Category text a link to the actual Category page">
			<option value="0">nein</option>
			<option value="1">ja</option>
		</param>

		<param name="rating" type="radio" default="1" label="Item Rating" description="Show/Hide the item rating - only affects this page">
			<option value="">Katgorie Einstellung</option>
			<option value="0">verbergen</option>
			<option value="1">anzeigen</option>
		</param>


		<param name="author" type="radio" default="1" label="Author Names" description="Show/Hide the item author - only affects this page">
			<option value="">Katgorie Einstellung</option>
			<option value="0">verbergen</option>
			<option value="1">anzeigen</option>
		</param>


		<param name="createdate" type="radio" default="1" label="Created Date and Time" description="Show/Hide the item creation date - only affects this page">
			<option value="">Katgorie Einstellung</option>
			<option value="0">verbergen</option>
			<option value="1">anzeigen</option>
		</param>


		<param name="modifydate" type="radio" default="0" label="Modified Date and Time" description="Show/Hide the item modification date - only affects this page">
			<option value="">Katgorie Einstellung</option>
			<option value="0">verbergen</option>
			<option value="1">anzeigen</option>
		</param>


		<param name="pdf" type="radio" default="1" label="PDF Icon" description="Show/Hide the item pdf button - only affects this page">
			<option value="">Katgorie Einstellung</option>
			<option value="0">verbergen</option>
			<option value="1">anzeigen</option>
		</param>


		<param name="print" type="radio" default="1" label="Print Icon" description="Show/Hide the item print button - only affects this page">
			<option value="">Katgorie Einstellung</option>
			<option value="0">verbergen</option>
			<option value="1">anzeigen</option>
		</param>

		<param name="email" type="radio" default="1" label="Email Icon" description="Show/Hide the item email button - only affects this page">
			<option value="">Katgorie Einstellung</option>
			<option value="0">verbergen</option>
			<option value="1">anzeigen</option>
		</param>


		<param name="comment" type="radio" default="" label="News Comment" description="Can Comment the News Item">
			<option value="">Katgorie Einstellung</option>
			<option value="0">Nein</option>
			<option value="1">Ja</option>
		</param>


